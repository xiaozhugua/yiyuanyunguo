<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/good"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_size10"
    android:paddingTop="@dimen/margin_size5">

    <ImageView
        android:padding="1dp"
        android:id="@+id/good_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/img_hwg_item_kuang"
        android:scaleType="centerInside" />

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="65dp">

        <TextView
            android:lines="2"
            android:id="@+id/good_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size5"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/real_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/good_desc"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/good_desc"
            android:layout_marginLeft="@dimen/margin_size3"
            android:layout_toRightOf="@+id/real_price"
            android:singleLine="true"
            android:textColor="@color/text_gray" />


    </RelativeLayout>

</LinearLayout>