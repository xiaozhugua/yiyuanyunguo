<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="?attr/TitleHeight">
        <RelativeLayout
            android:id="@+id/relative_back"
            android:background="@drawable/click_bj"
            android:layout_width="?attr/TitleHeight"
            android:layout_height="match_parent">
            <include layout="@layout/hqb_view_back"/>
        </RelativeLayout>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hwg_text1"
            android:textSize="?attr/TitleTextSize"
            android:text="华侨帮品牌承诺"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="海外直邮"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hwg_text1"
                android:textSize="16sp"
                android:text="国际物流快速直达 无需任何中转第三方"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_hwg_baozhang1"/>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="正品货源"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_hwg_baozhang2"/>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="保税仓发货"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_hwg_baozhang3"/>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="7天无理由退款"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_hwg_baozhang4"/>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="本土客服"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_hwg_baozhang5"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
