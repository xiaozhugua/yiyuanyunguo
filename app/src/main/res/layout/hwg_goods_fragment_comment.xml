<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品好评率："
                android:textColor="#808080"
                android:textSize="16sp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/t_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/tljr_statusbarcolor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/img_hwg_commet_bg2"
                android:gravity="center"
                android:padding="5dp"
                android:text="全部"
                android:textColor="@color/noselect" />

            <TextView
                android:id="@+id/t_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/img_hwg_commet_bg2"
                android:gravity="center"
                android:padding="5dp"
                android:text="好评"
                android:textColor="@color/noselect" />

            <TextView
                android:id="@+id/t_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/img_hwg_commet_bg2"
                android:gravity="center"
                android:padding="5dp"
                android:text="中评"
                android:textColor="@color/noselect" />

            <TextView
                android:id="@+id/t_bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_hwg_commet_bg1"
                android:gravity="center"
                android:padding="5dp"
                android:text="差评"
                android:textColor="@color/noselect" />
        </LinearLayout>

        <TextView
            android:id="@+id/t_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/img_hwg_commet_bg2"
            android:gravity="center"
            android:padding="5dp"
            android:text="晒图"
            android:textColor="@color/noselect" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/subscribe_seperate_line" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_top" />


</RelativeLayout>