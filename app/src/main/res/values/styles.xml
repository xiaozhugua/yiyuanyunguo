    </style>
    <!-- 数字进度条 end-->

    <style name="speakdialog_bottom" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/move_bottom_in_activity</item>
        <item name="@android:windowExitAnimation">@anim/move_bottom_out_activity</item>
    </style>



    <style name="subscribe_seperate_line">
        <item name="android:background">@color/subscribe_seperate_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.01px</item>
        <item name="android:layout_marginTop">5.0dip</item>
        <item name="android:layout_marginBottom">5.0dip</item>
    </style>

    <style name="subscribe_seperate_line2">
        <item name="android:background">@color/subscribe_seperate_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.01px</item>
        <item name="android:layout_marginTop">6.0dip</item>
        <item name="android:layout_marginBottom">6.0dip</item>
    </style>

    <style name="subscribe_my_tip_text">
        <item name="android:textSize">14.0sp</item>

        <item name="android:textColor">@color/tljr_statusbarcolor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="custom_toast_anim_view">
        <item name="@android:windowEnterAnimation">@anim/enter_anim</item>
        <item name="@android:windowExitAnimation">@anim/exit_anim</item>
    </style>

    <!--zjz-->

    <!--dialog动画样式-->
    <style name="photostyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/hwg_dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/hwg_dialog_exit</item>
    </style>
    <!--背景为透明-->
    <style name="photodialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置window背景透明，也就是去边框 -->
    </style>

    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_style</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="commentRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_comment_style</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="comment2RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_comment2_style</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="MyThemeNight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyThemeNight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="NavPage">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/navpage</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/alpha_in</item>
        <item name="android:windowExitAnimation">@anim/alpha_out</item>
    </style>


</resources>